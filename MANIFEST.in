# MANIFEST.in - Package distribution manifest for bronze-foundry

# Include important documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include INSTALLATION.md
include QUICKSTART.md
include QUICK_REFERENCE.md
include DOCUMENTATION.md
include TESTING.md
include RELEASE_NOTES_v1.0.0.md

# Include configuration files
include *.ini
include *.cfg
include *.toml
include *.yaml
include *.yml

# Include requirements files
include requirements.txt
include requirements-dev.txt
include requirements-azure.txt
include requirements-db.txt

# Include all documentation
recursive-include docs *.md
recursive-include docs *.yaml
recursive-include docs *.yml
recursive-include docs *.py

# Include all config examples
recursive-include config *.md

# Include package data
recursive-include core *.py
recursive-include extractors *.py

# Exclude unnecessary files
recursive-exclude tests *
recursive-exclude .github *
recursive-exclude htmlcov *
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
recursive-exclude __pycache__ *
exclude .coverage
exclude .gitignore
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
